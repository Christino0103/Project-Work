<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Area Rettangolo</title>
    <script>
        function calcola() {
            let base = parseFloat(document.getElementById("base").value);
            let altezza = parseFloat(document.getElementById("altezza").value);
            let area;
            area = base * altezza;
            document.getElementById("area").value = area;
        }
    </script>
</head>
<body>
    <h1>Area del Rettangolo</h1>
    <br>
    <label for="base">Base:</label>
    <br>
    <input type="text" id="base" placeholder="Inserire la base">
    <br><br>
    <label for="altezza">Altezza:</label>
    <br>
    <input type="text" id="altezza" placeholder="Inserire l'altezza">
    <br><br>
    <button onclick="calcola()">Calcola</button>
    <input type="text" id="area" readonly>
</body>
</html>
